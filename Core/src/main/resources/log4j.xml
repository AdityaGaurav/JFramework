<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd"
        [<!ENTITY logHome "/Users/solmarkn/IdeaProjects/WebDriverTestNg/logs/tests">]
        >
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="true" >

    <!-- for appender formats see http://www.tutorialspoint.com/log4j/log4j_patternlayout.htm -->
    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <!--<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"/>-->
            <param name="ConversionPattern" value="%d{HH:mm:ss} %7r %-5p %c{1}:%L - %m%n"/>
        </layout>
    </appender>

    <category name="org.apache.http.wire">
        <priority value="info"/>
    </category>
    <category name="org.apache.http">
        <priority value="info"/>
    </category>
    <category name="com.framework.driver.utils.ui.WaitUtil">
        <priority value="debug"/>
    </category>


    <root>
        <priority value="debug"/>
        <appender-ref ref="CONSOLE"/>
    </root>

</log4j:configuration>